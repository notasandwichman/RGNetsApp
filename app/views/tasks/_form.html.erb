<%= form_with model: @task do |form| %>
    
    <div class="form">
        <% unless request.path == new_task_path %>
            <div class="form-checkbox">
                <%= form.label :completed %>
                <%= form.check_box :completed %>
            </div>
        <% end %>

        <div class="form-group" style= "display: inline-flex; flex-direction: column;">
            <%= form.label :name %>
            <%= form.text_field :name, class:"form-title" %>
        </div>

        <div class="form-group">
            <%= form.label :description, style: "display: block" %>
            <%= form.rich_text_area :description, class:"form-text"%>
        </div>

        <div class="form-group">
            <%= form.submit class:"form-button"%>
        </div>
    </div>
<% end %>